<controls:MetroWindow
    x:Class="wpfMozaiq.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:wpfMozaiq.ViewModel"
    Title="Мозаика"
    Width="600"
    Height="450"
    BorderBrush="{DynamicResource AccentColorBrush}"
    BorderThickness="1"
    mc:Ignorable="d">
    <Window.DataContext>
        <viewModel:MainViewModel />
    </Window.DataContext>

    <DockPanel>

        <Menu
            Width="auto"
            Height="auto"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            DockPanel.Dock="Top"
            FontSize="14">
            <MenuItem Header="Файл">
                <MenuItem Command="{Binding ShowNewProjectView}" Header="Создать" />
                <MenuItem Header="Открыть" />
                <MenuItem Header="Сохранить" />
                <MenuItem Command="{Binding Exit}" Header="Выход" />
            </MenuItem>
            <MenuItem Header="Правка">
                <MenuItem Header="Обновить" />
                <MenuItem Header="Параметры" />
            </MenuItem>
            <MenuItem Header="Вид">
                <MenuItem Header="Увеличить" />
                <MenuItem Header="Уменьшить" />
                <MenuItem Header="Выбрать масштаб" />
            </MenuItem>
            <MenuItem Header="Инструменты">
                <MenuItem Header="Каталог" />
                <MenuItem Header="Техническое задание" />
                <MenuItem Header="Источник" />
            </MenuItem>
            <MenuItem Header="Справка" />
        </Menu>


        <ToolBarTray Width="auto" DockPanel.Dock="Top">
            <ToolBar Style="{DynamicResource MaterialDesignToolBar}">
                <Button ToolBar.OverflowMode="Never" ToolTip="Обновить">
                    <materialDesign:PackIcon Kind="Refresh" />
                </Button>
                <Separator />
                <Button ToolBar.OverflowMode="Never" ToolTip="Параметры">
                    <materialDesign:PackIcon Kind="Settings" />
                </Button>
                <Separator />
                <Button ToolBar.OverflowMode="Never" ToolTip="Увеличить масштаб">
                    <materialDesign:PackIcon Kind="Plus" />
                </Button>

                <Button ToolBar.OverflowMode="Never" ToolTip="Уменьшить масштаб">
                    <materialDesign:PackIcon Kind="Minus" />
                </Button>
                <Separator />
                <Button ToolBar.OverflowMode="Never" ToolTip="Каталог">
                    <materialDesign:PackIcon Kind="Palette" />
                </Button>
                <Separator />
                <Button ToolBar.OverflowMode="Never" ToolTip="Техническое задание">
                    <materialDesign:PackIcon Kind="Grid" />
                </Button>
                <Separator />
                <Button ToolBar.OverflowMode="Never" ToolTip="Источник">
                    <materialDesign:PackIcon Kind="Image" />
                </Button>
            </ToolBar>


        </ToolBarTray>




    </DockPanel>




</controls:MetroWindow>

